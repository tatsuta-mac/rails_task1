<div class="PageTitle">
    <h2 class="PageTitle__text">予定一覧</h2>
    <%= link_to "新規追加", new_post_path, class: "btn btn-primary Button Button--primary" %>
</div>

<div class="table-responsive TableResponsive">
    <table class="table Table">
        <thead>
            <tr>
                <th>id</th>
                <th>タイトル</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>終日</th>
                <th>更新日時</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.title %></td>
                    <td><%= post.start_date %></td>
                    <td><%= post.end_date %></td>
                    <td><%= post.in_all_day ? '○': '' %></td>
                    <td><%= post.updated_at.to_s(:datetime_jp) %></td>
                    <td><%= link_to "詳細", post_path(post.id) %></td>
                    <td><%= link_to "編集", edit_post_path(post.id) %></td>
                    <td><%= link_to '削除', post_path(post), method: :delete, data: { confirm: "投稿を削除します。よろしいですか？" } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>