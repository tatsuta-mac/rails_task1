
<h2 class="PageTitle__text">予定を編集してください</h2>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
    <table>
        <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <th><%= f.text_field :title %></th>
        </tr>
        <tr>
            <th><%= f.label :start_date, "開始日" %></th>
            <th><%= f.date_field :start_date %></th>
        </tr>
        <tr>
            <th><%= f.label :end_date, "終了日" %></th>
            <th><%= f.date_field :end_date %></th>
        </tr>
        <tr>
            <th><%= f.label :in_all_day, "終日の場合はチェックを入れます" %></th>
            <th><%= f.check_box :in_all_day %></th>
        </tr>
        <tr>
            <th><%= f.label :memo, "スケジュールメモ" %></th>
            <th><%= f.text_area :memo %></th>
        </tr>
    </table>

        <div class="FormContainer__buttons">
            <%= link_to "キャンセル", :posts, class: "btn button Button--secondary"%>
            <%= f.submit "保存", class: "btn Button Button--primary"%>
            
        </div>
    </div>
    <p>
        <% flash.each do |message_type, message| %>
            <div class="flash-message <%= message_type %>"><%= message %></div>
        <% end %>
        <% yield %>
    </p>

<% end %>