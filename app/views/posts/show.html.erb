<%= link_to "← 一覧に戻る", :posts %>

<div>
    <h2 class="PageTitle__text"><%= @post.title %></h2>
    <button class="btn Button Button--edit"><%= link_to "編集", edit_post_path(@post.id) %></button>
</div>


<%= form_with model: @post do |f| %>
    <table>
    <tr>
        <th>開始日</th>
        <td><%= l @post.start_date %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= l @post.end_date %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @post.in_all_day ? 'o': '' %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @post.memo %></td>
    </tr>
    </table>

<% end %>